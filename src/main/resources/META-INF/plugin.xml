<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.sohocn.kebabCase</id>
    <name>Kebab Case Converter</name>
    <vendor>sohocn</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>


    <actions>
        <action id="ConvertToKebabCase" class="com.sohocn.kebabCase.KebabCaseConvertAction"
                text="Convert to Kebab Case">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
        <action id="ConvertToSpringBootMappingValueKebabCase" class="com.sohocn.kebabCase.SpringBootMappingValueConvertAction"
                text="Convert SpringBoot Mapping Value to Kebab Case">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
